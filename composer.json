{
    "name": "template-provider/bmecat",
    "type": "library",
    "description": "Build BMECat documents",
    "keywords": ["bmecat"],
    "homepage": "https://github.com/template-provider/bmecat",
    "license": "LGPL-3.0-or-later",
    "version": "1.1.0",
    "authors": [
        {
            "name": "Jan Gantzert",
            "email": "jan.gantzert@template-provider.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "jms/serializer": "^3.30.0",
        "symfony/expression-language": "^6.4.0"
    },
    "require-dev": {
        "ext-xml": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.9.0",
        "infection/infection": "^0.29.6",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpcompatibility/php-compatibility": "dev-develop",
        "phpro/grumphp-shim": "^2.7",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^1.11",
        "phpstan/phpstan-phpunit": "^1.4",
        "phpstan/phpstan-strict-rules": "^1.1.0",
        "phpunit/phpunit": "^10.5.30",
        "rector/rector": "^1.2.3",
        "squizlabs/php_codesniffer": "^3.10.2"
    },
    "autoload": {
        "psr-4": {
            "TemplateProvider\\BMEcat\\": "src/TemplateProvider/BMEcat/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TemplateProvider\\BMEcat\\": "tests/unit/TemplateProvider/BMEcat/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "infection/extension-installer": true,
            "phpro/grumphp-shim": true
        }
    }
}
